<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gallery.jungle.ringbd">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="Transport Bus Information"
            android:name="com.gallery.jungle.ringbd.Transport.Bus.MainFragmentActivity" >
        </activity>

        <activity
            android:label="Transport Bus Location Information"
            android:name="com.gallery.jungle.ringbd.Transport.Bus.SingleLocationAddress" >
        </activity>
        <activity
            android:label="Transport Bus Counter Information"
            android:name="com.gallery.jungle.ringbd.Transport.Bus.SingleCounterInformation" >
        </activity>

    </application>

</manifest>